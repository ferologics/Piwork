#!/usr/bin/env bash
#MISE description="Set API key in auth store (default profile, test harness)"
set -euo pipefail

PROVIDER="${1:-}"
KEY="${2:-}"

if [[ -z "$PROVIDER" || -z "$KEY" ]]; then
    echo "Usage: mise run test-auth-set-key <provider> <key>"
    exit 1
fi

if ! nc -z localhost 19385 2>/dev/null; then
    echo "Test server not running. Run: mise run test-start"
    exit 1
fi

RESULT=$(python - "$PROVIDER" "$KEY" <<'PY' | nc -w 2 localhost 19385
import json
import sys

payload = {
    "cmd": "auth_set_api_key",
    "provider": sys.argv[1],
    "key": sys.argv[2],
}
print(json.dumps(payload))
PY
)

if [[ "$RESULT" == ERR:* ]]; then
    echo "$RESULT"
    exit 1
fi

echo "$RESULT"
