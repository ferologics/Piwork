#!/usr/bin/env bash
#MISE description="Import ~/.pi auth into auth store (default profile, test harness)"
set -euo pipefail

if ! nc -z localhost 19385 2>/dev/null; then
    echo "Test server not running. Run: mise run test-start"
    exit 1
fi

RESULT=$(python <<'PY' | nc -w 2 localhost 19385
import json

payload = {
    "cmd": "auth_import_pi",
}
print(json.dumps(payload))
PY
)

if [[ "$RESULT" == ERR:* ]]; then
    echo "$RESULT"
    exit 1
fi

echo "$RESULT"
