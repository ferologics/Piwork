#!/usr/bin/env bash
#MISE description="Delete provider from auth store for a profile (test harness)"
set -euo pipefail

PROVIDER="${1:-}"
PROFILE="${2:-default}"

if [[ -z "$PROVIDER" ]]; then
    echo "Usage: mise run test-auth-delete <provider> [profile]"
    exit 1
fi

if ! nc -z localhost 19385 2>/dev/null; then
    echo "Test server not running. Run: mise run test-start"
    exit 1
fi

RESULT=$(python - "$PROVIDER" "$PROFILE" <<'PY' | nc -w 2 localhost 19385
import json
import sys

payload = {
    "cmd": "auth_delete",
    "provider": sys.argv[1],
    "profile": sys.argv[2],
}
print(json.dumps(payload))
PY
)

if [[ "$RESULT" == ERR:* ]]; then
    echo "$RESULT"
    exit 1
fi

echo "$RESULT"
